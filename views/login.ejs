<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8"/>
    <title>OUHK COMPS381F Project Assignment 2020</title>
    <link rel="stylesheet" href="/styles.css"/>
</head>

<body>
<h1 data-position="header">OUHK - Editing Restaurant</h1>

<section data-position="restaurants">
    <h2 class="text-center">Login</h2>
    <form action="/login" method="POST">
        <div class="form-group">
            <label for="user_name">Username</label>
            <input type="text" name="user_name" id="user_name" placeholder="Username" required>
        </div>
        <div class="form-group">
            <label for="user_pass">Password</label>
            <input type="password" name="user_pass" id="user_pass" placeholder="Password">
        </div>
        <% if (locals.login_errors) {
        login_errors.forEach(function(error_msg){ %>
            <div class="alert" style="color: red"><%= error_msg %></div>
        <% });
        } %>

        <button type="submit" class="btn btn-primary">Login</button>
        <a href="/register">Register</a>
    </form>
</section>



<script src="/main.js"></script>
</body>
</html>
